<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/background_main_gradient"  android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/background_white" app:contentPadding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="328dp"
                android:layout_height="299dp"
                android:layout_gravity="center"
                android:contentDescription="App Logo"
                android:elevation="8dp"
                android:src="@drawable/img_quizzz" />

            <TextView
                android:id="@+id/tvIntroTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài Kiểm Tra Định Hướng Chuyên Ngành"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/title_dark_blue" android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvIntroDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chào mừng bạn đến với bài kiểm tra ngắn giúp bạn khám phá các chuyên ngành Công nghệ Thông tin phù hợp với sở thích và năng khiếu của mình. Bài test gồm 12 câu hỏi trắc nghiệm. Hãy chọn câu trả lời mà bạn cảm thấy đúng nhất với mình nhé!"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                android:textColor="@color/text_black" android:textAlignment="center"
                android:layout_marginBottom="32dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bắt đầu làm bài"
                android:textSize="16sp"
                app:backgroundTint="@color/primary_blue" android:textColor="@color/background_white" app:cornerRadius="8dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                app:icon="@android:drawable/ic_media_play"
                app:iconTint="@color/background_white" /> </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>