<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Trạng thái khi nhấn: dùng màu nhấn dịu hơn -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E6F7FF" />
            <corners android:radius="8dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/primary_blue"/>
        </shape>
    </item>

    <!-- Trạng thái bình thường -->
    <item>
        <shape>
            <gradient
                android:startColor="@color/background_white"
                android:endColor="@color/chat_bubble_blue"
                android:angle="45"/>
            <corners android:radius="8dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/border_gray"/>
        </shape>
    </item>

</selector>
